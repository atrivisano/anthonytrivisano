---
import '../styles/global.css';
import BaseHead from "../components/BaseHead.astro";
interface Props {
    title: string;
    description?: string;
    keywords?: string;
}

const {title, description = "Anthony Trivisano - VP of Development & Project Management", keywords} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <BaseHead title={title} description={description} />
</head>
<body>
<div class="bg-neutral-950 flex min-h-screen flex-col justify-between">
    <slot name="header"/>

    <slot/>

    <slot name="footer"/>
</div>
</body>
</html>