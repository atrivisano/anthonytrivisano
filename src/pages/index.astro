---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/home/HeroSection.astro';
import FeaturedProjects from '../components/home/FeaturedProjects.astro';
import FeaturedBlogPosts from '../components/home/FeaturedBlogPosts.astro';
import SkillsExpertise from '../components/home/SkillsExpertise.astro';
import CTASection from '../components/home/CTASection.astro';

const title = "Anthony Trivisano - Technology leadership, database optimization, and digital transformation consultant";
const description = "Technology leadership, database optimization, and digital transformation expert with experience in software development and team management.";
const keywords = "technology leadership, database optimization, digital transformation, software development, project management";
---

<MainLayout
    title={title}
    description={description}
    keywords={keywords}>

    <div class="bg-neutral-950">
        <Header slot="header"/>

        <main class="flex flex-col gap-20">
            <HeroSection/>
            <FeaturedProjects/>
            <FeaturedBlogPosts/>
            <SkillsExpertise/>
            <CTASection/>
        </main>

        <Footer slot="footer"/>
    </div>
</MainLayout>