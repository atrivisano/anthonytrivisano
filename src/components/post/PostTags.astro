---
export interface Props {
    tags: string[];
}

const {tags} = Astro.props;
---

{tags && tags.length > 0 && (
<div class="mt-12 pt-6 border-t border-neutral-200 dark:border-neutral-800">
    <h3 class="text-lg font-semibold mb-3 text-neutral-800 dark:text-neutral-200">Tags:</h3>
    <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
            <a
                href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                class="px-3 py-1 bg-neutral-100 hover:bg-neutral-200 dark:bg-neutral-800 dark:hover:bg-neutral-700 text-neutral-700 dark:text-neutral-300 text-sm rounded-full transition-colors"
            >
                #{tag}
            </a>
        ))}
    </div>
</div>
    )}