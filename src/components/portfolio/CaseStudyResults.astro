---
import Container from '../common/Container.astro';

interface Metric {
    value: string;
    label: string;
}

interface Props {
    metrics?: Metric[];
}

const { metrics = [] } = Astro.props;
---
<section class="py-16 sm:py-24 bg-neutral-950">
    <Container>
        <h2 class="text-3xl font-bold tracking-tight text-white mb-8">Results & Impact</h2>

        {metrics && metrics.length > 0 && (
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-3 mb-12">
                {metrics.map(metric => (
                    <div class="rounded-3xl bg-neutral-900 border border-neutral-800 p-8 text-center">
                        <div class="text-4xl font-bold text-white">{metric.value}</div>
                        <div class="mt-2 text-lg text-neutral-300">{metric.label}</div>
                    </div>
                ))}
            </div>
        )}

        <div class="text-neutral-400">
            <slot />
        </div>
    </Container>
</section>