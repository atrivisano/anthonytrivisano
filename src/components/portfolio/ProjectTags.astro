---
interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
    {tags.map((tag) => (
        <span class="inline-flex items-center rounded-full bg-neutral-700 px-2.5 py-1.5 text-xs font-medium text-neutral-100">
      {tag}
    </span>
    ))}
</div>