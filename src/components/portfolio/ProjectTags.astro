---
interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
    {tags.slice(0, 3).map((tag) => (
        <span class="inline-flex items-center rounded-none bg-neutral-800 px-2.5 py-0.5 text-xs font-medium text-neutral-300">
      {tag}
    </span>
    ))}
    {tags.length > 3 && (
        <span class="inline-flex items-center rounded-none bg-neutral-800 px-2.5 py-0.5 text-xs font-medium text-neutral-300">
      +{tags.length - 3} more
    </span>
    )}
</div>