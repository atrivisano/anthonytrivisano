---
import Container from '../common/Container.astro';

interface ProcessPhase {
    title: string;
    description: string;
}

interface Props {
    phases?: ProcessPhase[];
}

const { phases = [] } = Astro.props;
---
<section class="py-16 sm:py-24">
    <Container>
        <div class="mx-auto max-w-3xl">
            <h2 class="text-3xl font-bold tracking-tight text-white mb-8">Development Process</h2>

            <slot />

            {phases && phases.length > 0 && (
                <div class="mt-10 space-y-12">
                    {phases.map((phase, index) => (
                        <div class="border-l-4 border-primary-600 pl-6">
                            <h3 class="text-xl font-bold text-white">{phase.title}</h3>
                            <p class="mt-2 text-neutral-400">{phase.description}</p>
                        </div>
                    ))}
                </div>
            )}
        </div>
    </Container>
</section>