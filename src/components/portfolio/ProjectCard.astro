---
import ProjectTags from './ProjectTags.astro';

interface Props {
    title: string;
    description: string;
    image: string;
    tags: string[];
    category: string;
    link: string;
}

const { title, description, image, tags, category, link } = Astro.props;
---

<article data-category={category} class="group relative flex flex-col overflow-hidden rounded-2xl bg-neutral-900 shadow-md hover:shadow-xl transition-all duration-300 ring-1 ring-neutral-800">
    <div class="relative isolate flex flex-1 flex-col">
        <div class="flex flex-1 flex-col justify-between p-8">
            <div class="flex-1">
                <ProjectTags tags={tags} />
                <h3 class="mt-4 text-xl font-semibold leading-6 text-white">
                    <a href={link} class="hover:text-neutral-100">
                        {title}
                    </a>
                </h3>
                <p class="mt-4 text-base text-neutral-50">
                    {description}
                </p>
            </div>
            <div class="mt-8 flex items-center gap-x-3">
                <a
                    href={link}
                    class="group/link inline-flex items-center gap-x-2 text-sm font-semibold text-white hover:text-neutral-100"
                >
                    View Project Details
                    <svg class="h-4 w-4 transition-transform group-hover/link:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</article>