---
import { siteMetadata } from '../../utils/siteMetadata';

interface Props {
    name?: string;
    description?: string;
    url: string;
}

const {
    name = "Contact",
    description = `Contact information for ${siteMetadata.person.name}`,
    url
} = Astro.props;

const contactPageSchema = {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "name": `${name} - ${siteMetadata.title}`,
    "description": description,
    "url": url,
    "mainEntity": {
        "@type": "Person",
        "name": siteMetadata.person.name,
        "email": siteMetadata.person.email,
        "url": siteMetadata.siteUrl
    }
};
---

<script type="application/ld+json" set:html={JSON.stringify(contactPageSchema)} />