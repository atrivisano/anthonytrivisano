---
const navigation = [
    { name: 'Home', href: '/' },
    { name: 'About', href: '/about' },
    { name: 'Portfolio', href: '/portfolio' },
    { name: 'Blog', href: '/blog' },
    { name: 'Contact', href: '/contact' },
];
---

<nav class="hidden md:flex space-x-8">
    {
        navigation.map((item) => (
            <a
                href={item.href}
                class="text-base font-medium text-gray-700 hover:text-neutral-600 dark:text-gray-200 dark:hover:text-neutral-400 transition-colors"
            >
                {item.name}
            </a>
        ))
    }
</nav>

<div class="md:hidden">
    <button
        type="button"
        class="text-white hover:text-neutral-200"
        aria-label="Toggle menu"
    >
        <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
            />
        </svg>
    </button>
</div>