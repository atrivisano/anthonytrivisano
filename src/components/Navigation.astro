---
const navigation = [
    {name: 'Home', href: '/', button: false},
    {name: 'About', href: '/about', button: false},
    {name: 'Portfolio', href: '/portfolio', button: false},
    {name: 'Blog', href: '/blog', button: false},
    {name: 'Contact', href: '/contact', button: false},
    {name: 'Book a call', href: 'https://calendar.app.google/xPsjRKhmb5aM5BFW8', button: true},
];
---

<nav class="hidden md:flex items-center space-x-8">
    {
        navigation.map((item) => (
            <a
                href={item.href}
                class:list={[
                    "text-base font-medium transition-colors",
                    item.button
                        ? "bg-white text-black hover:bg-neutral-100 px-5 py-3"
                        : "text-neutral-200 hover:text-neutral-400"
                ]}
                target={item.button ? "_blank" : "_self"}
            >
                {item.name}
            </a>
        ))
    }
</nav>

<div class="md:hidden">
    <button
        type="button"
        class="text-white hover:text-neutral-200"
        aria-label="Toggle menu"
    >
        <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
            />
        </svg>
    </button>
</div>