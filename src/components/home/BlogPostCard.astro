---
interface Props {
    title: string;
    description: string;
    imageUrl: string;
    imageAlt: string;
    author: string;
    date: Date;
    categories: string[];
    tags: string[];
    link: string;
}

const {
    title,
    description,
    imageUrl,
    imageAlt,
    author,
    date,
    categories = [],
    tags = [],
    link
} = Astro.props;

// Format the date
const formattedDate = new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});

// Get primary category (first one)
const primaryCategory = categories.length > 0 ? categories[0] : null;
---

<div class="group relative overflow-hidden rounded-2xl bg-neutral-900 shadow-md hover:shadow-xl transition-all duration-300 flex flex-col h-full">
    <div class="aspect-[16/9] overflow-hidden">
        <img
            src={imageUrl}
            alt={imageAlt}
            class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
        />
    </div>
    <div class="p-6 flex flex-col flex-grow">
        {primaryCategory && (
            <div class="mb-3">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-neutral-800 text-neutral-200">
                    {primaryCategory}
                </span>
            </div>
        )}

        <h3 class="text-xl font-semibold text-white">{title}</h3>

        <div class="mt-2 flex items-center text-sm text-neutral-400">
            <span>{author}</span>
            <span class="mx-2">â€¢</span>
            <time datetime={date.toISOString()}>{formattedDate}</time>
        </div>

        <p class="mt-4 text-white line-clamp-3 flex-grow">{description}</p>

        <div class="mt-6 flex flex-wrap gap-2">
            {tags.slice(0, 3).map(tag => (
                <span class="inline-flex text-xs bg-neutral-800 px-2 py-1 rounded text-neutral-300">
                    #{tag}
                </span>
            ))}
            {tags.length > 3 && (
                <span class="inline-flex text-xs bg-neutral-800 px-2 py-1 rounded text-neutral-300">
                    +{tags.length - 3} more
                </span>
            )}
        </div>

        <a href={link} class="mt-6 inline-flex items-center text-sm font-medium text-white hover:text-neutral-200">
            Read Article
            <svg class="ml-2 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
            </svg>
        </a>
    </div>
</div>