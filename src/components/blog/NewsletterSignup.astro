---
export interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Stay Updated",
    description = "Get notified about new articles and industry insights. I share practical tips and in-depth analysis to help you stay at the forefront of technology."
} = Astro.props;
---

<section class="mb-20 bg-neutral-100 dark:bg-neutral-900 text-neutral-800 dark:text-neutral-200 rounded-2xl overflow-hidden shadow-xl relative">
    <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
    <div class="relative z-10 p-10 md:p-16 flex flex-col md:flex-row items-center gap-8">
        <div class="md:w-1/2">
            <h2 class="text-3xl font-bold mb-4">{title}</h2>
            <p class="text-neutral-600 dark:text-neutral-300 mb-6 text-lg">
                {description}
            </p>
        </div>
        <div class="md:w-1/2 w-full">
            <form class="bg-white dark:bg-neutral-800 p-6 rounded-xl shadow-md w-full">
                <div class="mb-4">
                    <label for="email" class="block text-neutral-700 dark:text-neutral-300 mb-2 font-medium">Email Address</label>
                    <input
                        type="email"
                        id="email"
                        placeholder="youremail@example.com"
                        class="w-full px-4 py-3 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 text-neutral-800 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-neutral-500 dark:focus:ring-neutral-400"
                        required
                    >
                </div>
                <button
                    type="submit"
                    class="w-full bg-neutral-800 hover:bg-neutral-900 dark:bg-neutral-700 dark:hover:bg-neutral-600 text-white font-medium py-3 px-4 rounded-lg transition-colors shadow-md hover:shadow-lg"
                >
                    Subscribe to Newsletter
                </button>
                <p class="text-xs text-neutral-500 dark:text-neutral-400 mt-3 text-center">
                    I respect your privacy. Unsubscribe at any time.
                </p>
            </form>
        </div>
    </div>
</section>

<style>
    .bg-grid-pattern {
        background-image: url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23000000' fill-opacity='0.1' fill-rule='evenodd'%3E%3Ccircle cx='3' cy='3' r='1'/%3E%3Ccircle cx='13' cy='13' r='1'/%3E%3C/g%3E%3C/svg%3E");
    }
</style>