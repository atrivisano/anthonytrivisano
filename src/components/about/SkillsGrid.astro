---
import Container from '../common/Container.astro';
import SectionHeader from './SectionHeader.astro';
import SkillCard from './SkillCard.astro';

const skillCategories = [
    {
        title: 'Technical Skills',
        skills: ['Full Stack Development', 'Laravel & PHP', 'RESTful APIs', 'WordPress', 'Azure AD', 'Database Management'],
        icon: `<svg class="h-7 w-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
    </svg>`
    },
    {
        title: 'Leadership',
        skills: ['Project Management', 'Team Leadership', 'Process Optimization', 'Strategic Planning', 'Budget Management', 'Client Relations'],
        icon: `<svg class="h-7 w-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
    },
    {
        title: 'Tools & Platforms',
        skills: ['JIRA & Bitbucket', 'Azure DevOps', 'Magento', 'WordPress', 'Ceridian Dayforce', 'UML Documentation'],
        icon: `<svg class="h-7 w-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
    </svg>`
    }
];
---

<section class="mt-24 sm:mt-32 pb-24 sm:pb-32">
    <Container>
        <SectionHeader title="Skills & Expertise" />
        <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {skillCategories.map((category) => (
                <SkillCard {...category} />
            ))}
        </div>
    </Container>
</section>