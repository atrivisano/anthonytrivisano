---
import Check from 'astro-heroicons/outline/Check.astro'

interface Props {
    title: string;
    skills: string[];
    icon: string;
}

const { title, skills, icon } = Astro.props;
---

<div class="rounded-2xl bg-neutral-900 p-8 ring-1 ring-neutral-800">
    <div class="flex items-center gap-x-3">
        <Fragment set:html={icon} />
        <h3 class="text-lg font-semibold text-white">{title}</h3>
    </div>
    <ul role="list" class="mt-6 space-y-3">
        {skills.map((skill) => (
            <li class="flex gap-x-3">
                <Check class="h-6 w-5 flex-none text-neutral-100" />
                <span class="text-white">{skill}</span>
            </li>
        ))}
    </ul>
</div>