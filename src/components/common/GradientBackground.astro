---
interface Props {
    class?: string;
    from?: string;
    to?: string;
    dark?: {
        from: string;
        to: string;
    };
    light?: boolean
}

const {
    class: className,
    from = "from-neutral-50",
    to = "to-neutral-100",
    dark = {
        from: "dark:from-neutral-900/20",
        to: "dark:to-neutral-800/20"
    },
    light = false
} = Astro.props;
---

<div class:list={[
    "absolute left-0 top-0 -z-10 h-full w-full bg-gradient-to-tr",
    light ? to : dark.to,
    light ? from : dark.from,
    "[mask-image:radial-gradient(closest-side,white,transparent)]",
    className
]}>
    <slot />
</div>