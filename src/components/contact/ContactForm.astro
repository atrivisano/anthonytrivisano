<form id="contact-form" class="space-y-6" method="POST" data-netlify="true" name="contact" netlify-honeypot="bot-field">
    <!-- Honeypot field to prevent spam -->
    <p class="hidden">
        <label>
            Don't fill this out if you're human: <input name="bot-field" />
        </label>
    </p>

    <!-- Required hidden input for Netlify forms -->
    <input type="hidden" name="form-name" value="contact" />

    <div>
        <label for="name" class="block text-sm font-medium text-white">
            Name
        </label>
        <input
            type="text"
            name="name"
            id="name"
            required
            class="input"
            placeholder="Your name"
        />
    </div>

    <div>
        <label for="email" class="block text-sm font-medium text-white">
            Email
        </label>
        <input
            type="email"
            name="email"
            id="email"
            required
            class="input"
            placeholder="your.email@example.com"
        />
    </div>

    <div>
        <label for="subject" class="block text-sm font-medium text-white">
            Subject
        </label>
        <input
            type="text"
            name="subject"
            id="subject"
            required
            class="input"
            placeholder="What's this about?"
        />
    </div>

    <div>
        <label for="message" class="block text-sm font-medium text-white">
            Message
        </label>
        <textarea
            name="message"
            id="message"
            rows="4"
            required
            class="input"
            placeholder="Your message..."
        ></textarea>
    </div>

    <button
        type="submit"
        class="cursor-pointer inline-flex items-center justify-center rounded-3xl px-5 py-3 text-base font-semibold text-neutral-950 transition-all duration-200 bg-white hover:bg-neutral-200 w-full"
    >
        Send Message
    </button>

    <div id="form-status" class="hidden text-center py-4"></div>
</form>

<script>
    // Check for success/error in URL parameters (for when the user is redirected back)
    document.addEventListener('DOMContentLoaded', () => {
        const statusDiv = document.getElementById('form-status') as HTMLDivElement;
        const urlParams = new URLSearchParams(window.location.search);

        if (urlParams.has('success')) {
            statusDiv.classList.remove('hidden', 'text-red-500');
            statusDiv.classList.add('text-green-500');
            statusDiv.innerHTML = 'Message sent successfully!';
        } else if (urlParams.has('error')) {
            statusDiv.classList.remove('hidden', 'text-green-500');
            statusDiv.classList.add('text-red-500');
            statusDiv.innerHTML = 'There was a problem submitting your form. Please try again.';
        }
    });
</script>