---
export interface Props {
    date: Date;
    format?: 'short' | 'long';
}

const { date, format = 'short' } = Astro.props;

const formatted = format === 'long'
    ? date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        weekday: 'long'
    })
    : date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
    });
---

<time datetime={date.toISOString()}>
    {formatted}
</time>