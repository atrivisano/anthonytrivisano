---
import ServiceIcon from './ServiceIcon.astro';

interface Props {
    name: string;
    description: string;
    icon: string;
    url: string;
}

const { name, description, icon, url } = Astro.props;
---

<div class="bg-neutral-800 rounded-lg p-6 transition-all duration-300 hover:bg-neutral-700">
    <div class="flex items-center mb-4">
        <div class="w-10 h-10 bg-primary-600/20 rounded-full flex items-center justify-center text-primary-500 mr-3">
            <ServiceIcon icon={icon} class="w-5 h-5" />
        </div>
        <h3 class="text-xl font-semibold text-white">
            {name}
        </h3>
    </div>
    <p class="text-neutral-300 mb-4">{description}</p>
    <a href={url} class="text-primary-500 hover:text-primary-400 font-medium inline-flex items-center">
        Learn more
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
    </a>
</div>