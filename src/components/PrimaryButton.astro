---
interface Props {
    href: string;
    class?: string;
    light?: boolean;
}

const { href, class: className, light = false } = Astro.props;
---
<a
    href={href}
    class:list={[
        "inline-flex items-center justify-center rounded-none text-base px-5 py-3 font-semibold transition-all duration-200",
        className,
        light ? 'bg-neutral-950 text-white hover:bg-neutral-900' : 'bg-white text-black hover:bg-neutral-100'
    ]}
>
    <slot />
</a>